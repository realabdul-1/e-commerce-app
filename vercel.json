{
  "version": 2,
  "builds": [
    { 
      "src": "backend/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": ["backend/**/*.py", "backend/requirements.txt"]
      }
    },
    { 
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { 
        "outputDirectory": "build",
        "distDir": "build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/app.py" },
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}