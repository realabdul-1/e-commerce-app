{
  "version": 2,
  "builds": [
    { 
      "src": "backend/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": "backend/**"
      }
    },
    { 
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/app.py" },
    { "src": "/static/(.*)", "dest": "/frontend/build/static/$1" },
    { "src": "/(.*)", "dest": "/frontend/build/index.html" }
  ]
}