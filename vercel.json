{
  "version": 2,
  "builds": [
    { "src": "backend/app.py", "use": "@vercel/python" },
    { 
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "build" } 
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/app.py" },
    { "src": "/static/(.*)", "dest": "/static/$1" }, 
    { "src": "/(.*)", "dest": "/index.html" }        
  ]
}